import java.util.Random;

public class ZadanieB3 {
	public static void main(String[] args) {
		int random = 0;
		int counter = 0;
		Random rand = new Random();
		int max = 0;
		int secondMax = 0;
		int sumEven = 1;
		do {
			counter++;
			random = rand.nextInt(151) - 50;
			if (random > secondMax) {

				if (random > max) {
					secondMax = max;
					max = random;
				} else {
					secondMax = random;
				}
			}

			if (random % 2 == 0 && random > 0) {
				sumEven *= random;
			}
		} while (random != 0);
		int everySecondSum = 0;
		System.out.format("dwie najwieksze: %d, %d iloczyn: %d", max, secondMax, sumEven);
		for (int i = 1; i <= counter; i++) {
			random = rand.nextInt(25) - 25;
			if (random != 0 && i % 2 != 0) {
				everySecondSum += random;
			}
		}
		System.out.println(everySecondSum);
	}
}
