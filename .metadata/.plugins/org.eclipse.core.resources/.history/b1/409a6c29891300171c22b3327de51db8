package zad7;

import java.util.Arrays;

public class Anagram {

	public static void main(String[] args) {
		System.out.println(isAnagram("aaa", "acaaca"));
	}

	public static boolean isAnagram(String first, String second) {
		first = first.trim();
		first = first.toLowerCase();
		second = second.trim();
		second = second.toLowerCase();

		char[] firstString = first.toCharArray();
		char[] secondString = first.toCharArray();
		Arrays.sort(firstString);
		String firstSorted = firstString.toString();
		secondString = second.toCharArray();
		Arrays.sort(secondString);
		String secondSorted = firstString.toString();
		if (firstSorted.equals(secondSorted)) {
			return true;
		} else {
			return false;
		}
	}
}
