		double prize;
		int part;
		System.out.println(getPrize());
//		System.out.print("podaj ilość rat: ");
//		part = in.nextInt();
		
		
	}
	public static double getPrize(){
		double prize;

		Scanner in = new Scanner(System.in);
		System.out.print("Podaj cene towaru: ");
		
		prize = in.nextDouble();
		if(prize< 100){
			System.out.print("cena musi zaczynać się od 100zł, spróbuj ponomnie");
			prize = getPrize();
		}
		
		return prize;
	}
}
