package zad4Dom;

public class DistanceLetters {

	public static void main(String[] args) {

		firstLast("zaccla ma kotac",'c');
		
	}

	private static void firstLast(String str, char c) {

		String temp;
		int pos1 = -1;
		int pos2 = -1;
		for (int i = 0; i < str.length(); i++) {
			if (str.charAt(i) == c) {
				if (pos1 == -1) {
					pos1 = i;
					pos2 = i;
					System.err.println("1");
				} else {System.err.println("2");
					pos2 = i;
				}
			}
		}
		temp = str.substring(pos1, pos2);
		System.out.println(temp + " odleglosc " + temp.length());
	}
}
