package zadanie6;

import java.text.NumberFormat;
import java.util.Scanner;

public class ConvertToInt {

	public static void main(String[] args) {
		System.out.println("podaj liczbÄ™: ");
		Scanner in = new Scanner(System.in);
		String stringNumber = in.next();
		strToInt(stringNumber);
	}

	public static Double strToInt(String str) {
		String readyToParse = "";
		boolean isE = false;
		boolean isPlus = false;
		boolean contin = true;
		for (int i = 0; i < str.length(); i++) {
			if (contin && Character.isDigit(str.charAt(i)) || (str.charAt(i) == 'e' || str.charAt(i) == 'E' || str.charAt(i)=='+')) {
				System.err.println("start");
				if(isE && (str.charAt(i) == 'e' || str.charAt(i) == 'E' ))
				{
					contin=false;
				}
				else{
					isE=true;
					readyToParse+=str.charAt(i);
				}
				if(isPlus && (str.charAt(i) == '+' )){
					contin=false;
				}
				else if((str.charAt(i) == '+' ) && (str.charAt(i-1) != 'e'||str.charAt(i-1) != 'E' )){
					contin=false;
				}
				else{
					isPlus=true;
					readyToParse+=str.charAt(i);
				}
				if(Character.isDigit(str.charAt(i))){
					readyToParse+=str.charAt(i);
					System.err.println("is digit");
				}
				
			}
		}
		try{
			NumberFormat f = NumberFormat.getInstance();
			f.setGroupingUsed(false);
			return Double.parseDouble(readyToParse);
		}catch(Exception e){
			e.printStackTrace();
			return 0.0;
		}
		
	}

}
