package zad4;

public class Zad {

	public static void main(String[] args) {
		firstlast("dAaaad", 'a');
	}

	public static void firstlast(String s, char c) {
		int countChar = 0;
		String temp = "";
		boolean isC = false;
		for (int i = 0; i < s.length() - 1; i++) {
			if (s.charAt(i) == c) {
				isC=true;
				if(temp!=""){
					System.out.println(countChar + " to ilosc znakow a to tekst: "+temp);
					temp="";
					countChar=0;
				}
				else if(s.charAt(i) == c){
					
				}
				if(isC){
					isC=false;
				}
			}
			if (isC) {
				countChar++;
				temp += s.charAt(i);
			
			}
			if(i ==s.length()-1 && temp!=""){
				System.out.println(-1 + " to ilosc znakow a to tekst: "+temp);

			}
			
			
		}
	}
}
