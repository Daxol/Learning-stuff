package zad3Dom;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class SplitTwo {

	public static void main(String[] args){
		String[] tab = {"a","bv","c"," "};
		String words = "Ala ma kota co ma na imie kbvk";
		System.out.println(split2(words,tab));
	}
	private static String split2(String str, String[] tStr){
		String temp;
		StringBuilder sb = new StringBuilder();
		
		String[] array = str.split(tStr[1]);
		for (String string : array) {
			sb.append(string);
		}
		temp = sb.toString();
		sb = new StringBuilder();
		System.err.println(temp);
		for (int i = 1; i < tStr.length; i++) {
			array = temp.split(tStr[i]);
			for (String string : array) {
				sb.append(string);
			}
			temp = sb.toString();
			sb = new StringBuilder();
		}
		return temp;
	}
}
