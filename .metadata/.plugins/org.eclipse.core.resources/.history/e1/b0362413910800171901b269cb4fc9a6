package zadanieB1;

import java.util.Scanner;

public class Temperatura {
	
	public static void main(String[] args){
		
		Scanner in = new Scanner(System.in);
		int celsjusz;
		float faren;
		
		celsjusz = in.nextInt();
		faren = celsjusz *(9f/5f) +32;
		if(celsjusz<0){
			
			System.out.format("%.2f F,zimno do kolejnego poziomu brakuje %d C",faren,celsjusz);
		}
		else if(celsjusz<10&& celsjusz>=0){
			
			System.out.format("%.2f F,chłodno do kolejnego poziomu brakuje %d C",faren,10-celsjusz);
		}
		else if(celsjusz<25&& celsjusz>=10){
			System.out.format("%.2f F,ciepło do kolejnego poziomu brakuje %d C",faren,26-celsjusz);
		}
		else if( celsjusz>=25){
			System.out.format("%.2f F,gorąco brak kolejnego poziomu ",faren);
		}
	}
}
