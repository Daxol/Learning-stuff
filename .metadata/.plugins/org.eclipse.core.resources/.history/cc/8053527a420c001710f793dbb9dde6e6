package zadanie8;

import java.util.Scanner;

public class ChristmassTree {

	public static void main(String args[]){
		System.out.print("podaj wysokość choinki: ");
		Scanner in = new Scanner(System.in);
		int height = in.nextInt();
		
		for (int i = 0; i < height; i++) {
			for (int j = 1; j < height-i; j++) {System.out.print(" ");

			}
			for (int k = 0; k<=i*2; k++) {
				System.out.print("*");
			}
			System.out.println();
		}
		for (int i = height; i > 0; i--) {
			for (int j = height-i; j >0; j--) {System.out.print(" ");

			}
			for (int k = 1; k<i*2; k++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
