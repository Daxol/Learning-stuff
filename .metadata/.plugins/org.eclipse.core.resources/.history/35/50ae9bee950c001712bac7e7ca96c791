package zadanie1;

import java.util.Iterator;
import java.util.Random;

public class Tablice1 {

	public static void main(String[] args) {

		int[] arrayInt = new int[10];

		Random rand = new Random();
		int temp;
		int sum = 0;
		
		for (int i = 0; i < arrayInt.length; i++) {
			temp = rand.nextInt(21) - 10;
			arrayInt[i] = temp;
			sum += temp;
		}

		int counterLower = 0;
		int counterHigher = 0;

		int max = arrayInt[0];
		int min = arrayInt[0];

		for (int var : arrayInt) {
			System.out.print(var + ", ");
			if (var > max) {
				max = var;
			} else if (var < min) {
				min = var;
			}
			
			if (var > sum / 10f) {
				counterHigher++;
			} else {
				counterLower++;
			}

		}
		System.out.printf("największy element: %d, najmniejszy: %d, średnia: %.2f, %d elementów jest większych od średniej, "
				+ " %d elementów jest mniejszych od średniej ",max,min,sum/10f,counterHigher,counterLower);
	}
}
