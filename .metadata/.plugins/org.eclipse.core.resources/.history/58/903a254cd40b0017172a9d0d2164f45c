package zadanie2;

import java.util.Scanner;

public class PodatekDochodowy {

	public static void main(String[] args){
		double taxAmount;
		Scanner in = new Scanner(System.in);
		
		System.out.println("podaj podatek dochodowy: ");{
			taxAmount = in.nextDouble();
			
			if(taxAmount < 85528){
				System.out.println("podatek wynosi 18% podstawy minus 556,02zl : "+ (taxAmount-((taxAmount-556.02)*0.18)));
			}
		}
	}
}
