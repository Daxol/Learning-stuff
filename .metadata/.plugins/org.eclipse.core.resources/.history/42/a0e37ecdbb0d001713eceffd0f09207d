package zadanie10Bonus;

import java.util.Random;
import java.util.Scanner;

public class Macierz {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int size = in.nextInt();
		boolean[][] boolArray = new boolean[size][size];
		int[][] intArray = new int[size][size];
		cos(intArray, boolArray, 10, 15);

	}

	public static void cos(int[][] intArray, boolean[][] boolArray, int firstArgs, int secondArg) {

		int counter = 0;
		float sumMinus = 0;

		int randTemp = 0;
		Random rand = new Random();
		for (int i = 0; i < boolArray.length; i++) {

			for (int j = 0; j < boolArray.length; j++) {
				if (i == j) {
					randTemp = rand.nextInt(100) + 1;
					if (randTemp < 25) {

						System.out.printf("%-4d", 1);
						intArray[i][j] = 1;
					} else {
						if (sumMinus / i < 0.25) {
							System.out.printf("%-4d", 1);
							intArray[i][j] = 1;
						} else {
							System.out.printf("%-4d", -1);
							intArray[i][j] = -1;
						}
					}

				} else {
					randTemp = rand.nextInt(301) - 100;
					System.out.printf("%-4d", randTemp);
					intArray[i][j] = randTemp;
				}
			}
			System.out.println();
		}
	}
}
