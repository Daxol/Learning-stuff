package zad4Dom;

public class DistanceLetters {

	public static void main(String[] args) {

		firstLast("a12345a6789a", 'a');

	}

	private static void firstLast(String str, char c) {

		String temp;
		int pos1 = -1;
		int pos2 = -1;
		for (int i = 0; i < str.length(); i++) {
			if (str.charAt(i) == c) {
				if (pos1 == -1) {
					pos1 = i;
					pos2 = i;
					System.err.println("1");
				} else {
					System.err.println("2");
					pos2 = i;
				}
			}
		}
		try {
			temp = str.substring(pos1, pos2 - 1);
			System.out.println(temp + " odleglosc " + temp.length());
		} catch (Exception e) {
			System.out.println(-1);
		}
	}
}
